<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#99A7A9AC" />
            <gradient android:angle="-90" android:startColor="#99A7A9AC" android:endColor="#99A7A9AC"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#99A7A9AC" />
            <solid android:color="#99A7A9AC"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#40A7A9AC" />
            <gradient android:angle="-90" android:startColor="#40A7A9AC" android:endColor="#40A7A9AC" />
        </shape>
    </item>
</selector>
